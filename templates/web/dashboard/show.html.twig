{% extends 'base.html.twig' %}

{% block title %}Użytkownicy{% endblock %}

{% block body %}

    <div class="row">
        <h1>Użytkownicy</h1>

        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Imię</th>
                <th scope="col">Nazwisko</th>
                <th scope="col">Email</th>
                <th scope="col">Rola</th>
                <th scope="col">Opcje</th>
                <th scope="col">Usuń</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th>{{ loop.index }}</th>
                    <td>{{ user.profile.firstName }}</td>
                    <td>{{ user.profile.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{% if 'ROLE_ADMIN' in user.roles %} Moderator {% else %} Użytkownik {% endif %}</td>
                    <td><a href="{{ path('admin_user_change_role', {id: user.id}) }}">Zmień uprawnienia</a></td>
                    <td><a href="{{ path('admin_user_delete', {id: user.id}) }}">Usuń</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}